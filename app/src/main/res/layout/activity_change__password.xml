<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/off_white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="30dp"
    tools:context="com.example.omarla.food2u_repo.Change_Password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_color"
        android:padding="20dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/chg_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE PASSWORD"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorBlack"
            android:layout_below="@+id/chg_pwd"
            android:layout_marginTop="15dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colororange">
            <EditText
                android:id="@+id/old_password"
                android:inputType="textWebPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Old Password"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorBlack"
            android:layout_below="@+id/password1"
            android:layout_marginTop="13dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colororange">
            <EditText
                android:id="@+id/new_password"
                android:inputType="textWebPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="New Password"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/password3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorBlack"
            android:layout_below="@+id/password2"
            android:layout_marginTop="13dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colororange">
            <EditText
                android:id="@+id/confirm_password"
                android:inputType="textWebPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Confirm password"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/save_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password3"
            android:layout_marginTop="20dp"
            android:background="@drawable/primary"
            android:gravity="center"
            android:padding="7dp"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>
