<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/off_white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="30dp"
    tools:context="com.example.omarla.food2u_repo.Feedback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_color"
        android:padding="20dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STALL FEEDBACK"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />


        <Button
            android:id="@+id/save_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="36dp"
            android:background="@drawable/primary"
            android:gravity="center"
            android:padding="7dp"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <RatingBar
            android:id="@+id/ratingBarfeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback"

            android:rating="5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp" />

        <RelativeLayout
            android:id="@+id/edit_description_lay"
            android:layout_below="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:background="@drawable/shape">


            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Describe ::"/>
            <EditText
                android:id="@+id/cutomer_view"
                android:layout_below="@id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="type.."
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ratingBarfeed"
            android:layout_marginStart="27dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="Please Tell Us To Improve " />
    </RelativeLayout>







</RelativeLayout>
