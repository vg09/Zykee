<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:id="@+id/fragment_additem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      >

  </RelativeLayout>


    <RelativeLayout
        android:id="@+id/add_btn_item_itact"
        android:layout_below="@+id/fragment_additem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
<Button
    android:id="@+id/add_new_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/orangestyle"
    android:textColor="@color/colorWhite"
    android:text="+ADD NEW FOOD ITEM"/>


    </RelativeLayout>


    <ListView
        android:id="@+id/itemlist_itemAct"
        android:layout_below="@id/add_btn_item_itact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>





</RelativeLayout>
