<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omarla.food2u_repo.SearchActivity">

    <TextView
        android:id="@+id/backtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Click on the search-icon to search for your item"
        android:textSize="20dp"
        android:textColor="@color/colorDarkBlue"
        />

    <Button
        android:layout_below="@id/backtext"
        android:id="@+id/searchbck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bluestyle"
        android:text="back"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_below="@+id/searchbck"
        android:id="@+id/slect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBrown"
        android:textSize="15dp"
        android:text="-Select your item from list below-"/>

    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@id/slect"
        android:id="@+id/searchList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>
